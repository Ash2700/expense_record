{{>message}}
{{>navbar}}
<div class="container w-50 mt-5  " style="background-color: #88A0A8; padding:0,-10px" >
    <div class="row p-2 justify-content-center ">
        <div class="col-4 align-self-start">*必填欄位</div>
        <div class="col-8 -content-center" style="font-size: 1.3rem;">請輸入你的支出</div>
    </div>
    <form action="/records/edit/:{{id}}?_method=PUT" method="post" class="m-0">
        <div class="row my-2 p-3 ">
            <div class="col-2 p-0 m-0">
                <label for="InputName" class="form-label">名稱*:</label>
            </div>
            <div class="col-10 p-0">
                <input type="text" class="form-control " id="InputName" aria-describedby="nameHelp" name="name"
                    placeholder="請輸入項目名稱" value="{{record.name}}" required style="background-color: #B4CEB3;">
            </div>
        </div>
        <div class="row my-3 p-3">
            <div class="col-2 p-0 m-0">
                <label for="InputDate" class="form-label">日期*:</label>
            </div>
            <div class="col-10 p-0">
                <input type="date" class="form-control" id="InputDate" aria-describedby="dateHelp" name="date"
                    placeholder="請選擇日期" required value="{{record.date}}" style="background-color: #B4CEB3;">
            </div>
        </div>
        <div class=" row my-3 p-3">
            <div class="col-2 p-0 ">
                <label for="InputCategory" class="form-label ">類別*:</label>
            </div>
            <div class="col-10 p-0">
                <select class="form-select" name="categoryId" id="category-select" aria-label="category select "
                    style="background-color: #B4CEB3;" required>
                    <optgroup label="類別">
                        {{#each categoryData as |category|}}
                        <option value="{{category.id}}" {{#eq ../record.categoryID category.id}}selected{{/eq}}>{{category.name}}</option>
                        {{/each}}
                </select>
            </div>
        </div>
        <div class="my-1 row p-3">
            <div class="col-2 p-0">
                <label for="Input" class="form-label d-inline-flex">金額*:
                </label>
            </div>
            <div class="col-10 p-0">
                <input type="number" class="form-control" id="confirmAmount" name="amount" 
                placeholder="請輸入金額" required value="{{record.amount}}" style="background-color: #B4CEB3;">
            </div>
        </div>
        <div class="row justify-content-center p-3">
            <div class="col-2"></div>
            <div class="col-10 d-grid gap-2 p-0">
            <button type="submit" class="btn"style="background-color: #FAD4D8;" >修改支出</button>
            </div>
        </div>
    </form>
</div>